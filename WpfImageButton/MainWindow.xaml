<Window x:Class="WpfImageButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfImageButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Change Image" Click="ButtonBase_OnClick"></Button>

        <local:ImageButton x:Name="btnImage" Width="200" Height="50" Content="Click Me!" Margin="100"
                           ImageSource="ok.png" ImageLocation="Left" ImageWidth="20" ImageHeight="25" />

    </StackPanel>
</Window>
